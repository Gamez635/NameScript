local function formatCFrame(cf)
    if not cf then return "CFrame.new(0,0,0)" end
    local x,y,z,r00,r01,r02,r10,r11,r12,r20,r21,r22 = cf:components()
    return string.format("CFrame.new(%.3f,%.3f,%.3f,%.6f,%.6f,%.6f,%.6f,%.6f,%.6f,%.6f,%.6f,%.6f)",
        x or 0, y or 0, z or 0,
        r00 or 1, r01 or 0, r02 or 0,
        r10 or 0, r11 or 0, r12 or 1,
        r20 or 0, r21 or 0, r22 or 0)
end

-- Fungsi interpolasi smooth untuk CFrame (hindari flip/loncat rotasi)
local function smoothCFrame(a: CFrame, b: CFrame, alpha: number): CFrame
    local pos = a.Position:Lerp(b.Position, alpha)
    
    local lookA = a.LookVector
    local lookB = b.LookVector
    local upA   = a.UpVector
    local upB   = b.UpVector
    
    local look = lookA:Lerp(lookB, alpha)
    if look.Magnitude < 0.000 then
        look = (a.LookVector + b.LookVector).Unit  -- fallback
    else
        look = look.Unit
    end
    
    local up = upA:Lerp(upB, alpha).Unit
    
    -- Orthogonalize agar tetap stabil
    local right = look:Cross(up)
    if right.Magnitude < 0.000 then
        right = look:Cross(Vector3.new(0,1,0)).Unit
    else
        right = right.Unit
    end
    up = right:Cross(look).Unit
    
    return CFrame.fromMatrix(pos, right, up)
end

