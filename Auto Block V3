-- ğŸƒ Speed Button
speedBtn.MouseButton1Click:Connect(function()
    isCustomSpeed = not isCustomSpeed
    speedBtn.Text = isCustomSpeed and "ğŸƒ Speed: On" or "ğŸƒ Speed: Off"
    title.Text = isCustomSpeed and "ğŸƒ Speed On!" or "ğŸƒ Speed Off!"
    updateWalkSpeed()
    task.spawn(resetTitle)
    updateStatus()
end)

-- ğŸƒ Speed Input
speedBox.FocusLost:Connect(function(enterPressed)
    if enterPressed then
        local num = tonumber(speedBox.Text)
        if num and num >= 0 then
            walkSpeed = num
            if isCustomSpeed then
                updateWalkSpeed()
            end
            title.Text = "ğŸƒ Speed: " .. num
