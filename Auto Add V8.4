RunService.RenderStepped:Connect(function(dt)
    playbackTime += dt
    
    -- Early exit kalau sudah lewat durasi (dengan sedikit toleransi)
    if playbackTime > lastTime + 0.25 then
        cam.CFrame = lastCFrame
        return
    end
    
    -- Cari index yang tepat (linear search dengan cache → cukup cepat untuk <5000 frames)
    while currentIdx < #frames and playbackTime >= frames[currentIdx + 1].Time do
        currentIdx += 1
    end
    
    if currentIdx >= #frames then
        -- Freeze di pose akhir
        cam.CFrame = lastCFrame
        hrp.CFrame = CFrame.new(frames[#frames].Pos, frames[#frames].Pos + lastLookFlat * 10)
        return
    end
    
    local a = frames[currentIdx]
    local b = frames[currentIdx + 1]
    
    if not (a and b) then return end
    
    local t_a, t_b = a.Time, b.Time
    local alpha = (playbackTime - t_a) / (t_b - t_a)
    alpha = math.clamp(alpha, 0, 1.02)  -- sedikit overshoot diizinkan untuk mengurangi gap kecil
    
    -- Interpolation
    local pos    = a.Pos:Lerp(b.Pos, alpha)
    local vel    = a.Vel:Lerp(b.Vel, alpha)
    local move   = a.Move:Lerp(b.Move, alpha)
    local fov    = a.FOV + (b.FOV - a.FOV) * alpha
    
    -- CFrame lerp + fallback kalau rotasi besar
    local cf
    if (a.CFrame.Position - b.CFrame.Position).Magnitude > 15 then
        cf = b.CFrame   -- hindari lerp aneh saat teleport kecil
    else
        cf = a.CFrame:Lerp(b.CFrame, alpha)
